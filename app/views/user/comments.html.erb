                           <div class="missing" style="display: none">
                              <div class="load_more">
                                 <a class="load_more btn btn--gray" href="#">Load more</a>
                              </div>
                           </div>
                           <ul class="mobius">
                              <li class="page" data-last_page="false" data-page_number="1">
                                 <ol id="activity">
                                   <% @comments.each do |comment| %>
                                     <li class="activity-comment-project">
                                        <span class="quote">â€œ</span>
                                        <p class="body">
